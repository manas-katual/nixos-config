{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "/usr/share/astal/gjs/gtk3",
    "paths": {
      "astal": ["/usr/share/astal/gjs"],
      "astal/*": ["/usr/share/astal/gjs/*"],
      "@assets/*": ["./assets/*"],
      "@widgets": ["./widgets/index.ts"],
      "@widgets/*": ["./widgets/*"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./utils/*"],
      "@windows/*": ["./windows/*"]
    },
  }
}
